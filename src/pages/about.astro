---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";

const entry = await getEntry("pages", "about");
if (!entry) {
  throw new Error("Missing about content entry.");
}
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description} canonicalPath="/about">
  <article class="prose">
    <Content />
  </article>
</BaseLayout>
