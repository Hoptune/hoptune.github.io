---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getEntry } from "astro:content";
import { profile } from "../data/profile";

const entry = await getEntry("pages", "cv");
if (!entry) {
  throw new Error("Missing cv content entry.");
}
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title} description={entry.data.description} canonicalPath="/cv">
  <section>
    <h1>Curriculum Vitae</h1>
    <p>
      <a class="button" href={profile.cvPdfPath}>Download CV (PDF)</a>
    </p>
  </section>

  <article class="prose">
    <Content />
  </article>
</BaseLayout>
